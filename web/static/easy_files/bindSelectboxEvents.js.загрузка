$(function() {
	var $selects = $('select');
	
	$selects.
	bind('reset', function() {
		var $self = $(this);
		$self.find('option').show();
		$self.find('option:first').attr('selected', true);
	}).
	bind('half-yearly', function() {
		var $self = $(this);
		$self.trigger('reset');
		
		var firstMonth = parseInt($('#sto-firstaccomplishment-trey').val());
        var secondMonth = ((firstMonth+6) > 12) ? firstMonth-6 : firstMonth+6;
        
        $self.find('option').hide();
        $self.find('option:first').show();
        $self.find('option:eq('+firstMonth+')').show();
        $self.find('option:eq('+secondMonth+')').show();
	}).
	bind('even', function() {
		var $self = $(this);
		$self.trigger('reset');
		
    	$self.find('option:odd').hide();
    	$self.find('option:first').show();
	}).
	bind('odd', function() {
		var $self = $(this);
		$self.trigger('reset');
		
    	$self.find('option:even').hide();
    	$self.find('option:first').show();
	}).
	bind('quater-one', function() {
		var $self = $(this);
		$self.trigger('reset');
		
    	$(this).trigger('showAll').trigger('reset');
    	
    	$self.find('option').hide();
    	$self.find('option:eq(1), option:eq(4), option:eq(7), option:eq(10)').show();
    	$self.find('option:first').show();
	}).
	bind('quater-two', function() {
		var $self = $(this);
		$self.trigger('reset');
		
    	
    	$self.find('option').hide();
    	$self.find('option:eq(3), option:eq(6), option:eq(9), option:eq(12)').show();
    	$self.find('option:first').show();
	}).
	bind('showAll', function() {
		var $self = $(this);
		$self.trigger('reset');
	}).
	bind('disable', function() {
		var $self = $(this);
		$self.trigger('reset');
		$self.attr('disabled', true).hide();
	}).
	bind('enable', function() {
		var $self = $(this);
    var isDisabled = $self.attr('disabled');
    var isVisible = ($self.css('display') != 'none');
		if (isDisabled || !isVisible) {
        $self.attr('disabled', false).show();
        $self.trigger('reset');
    }
	});
});